---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Página no encontrada">
  <section
    class="min-h-[100dvh] h-full flex flex-col items-center justify-center gap-y-2"
  >
    <h1 class="text-4xl font-bold">404</h1>
    <p class="text-lg">Página no encontrada</p>
    <a
      href="/"
      class="mt-2 bg-blue-800 text-white px-4 py-2 rounded-md hover:bg-blue-900 transition-colors ease-in-out duration-300 w-full md:w-auto text-center self-start lg:self-center"
    >
      Volver al inicio
    </a>
  </section>
</Layout>
